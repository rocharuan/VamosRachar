<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:weightSum="120">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_weight="60"
            app:srcCompat="@drawable/bill" />

        <EditText
            android:id="@+id/valorTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/valorTextNumber"
            android:inputType="number" />

        <EditText
            android:id="@+id/totalPessoasTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/totalPessoasTextNumber"
            android:inputType="number" />

        <TextView
            android:id="@+id/numerotextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="@string/numerotextView"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/valortextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/buttonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="12"
            android:padding="6dp"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/shareImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/share"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/shareImageButton"/>

            <ImageButton
                android:id="@+id/listenImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/listen"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/listenImageButton"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>